<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="#F8F7FC"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_avatar_notification"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/txt_name_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/btn_image_play"
        android:layout_toRightOf="@+id/img_avatar_notification"
        android:ellipsize="end"
        android:lines="1"
        android:text="All of me"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txt_artist_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_name_no"
        android:textColor="@color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"

        android:layout_toLeftOf="@+id/btn_image_play"
        android:layout_toRightOf="@+id/img_avatar_notification"
        android:ellipsize="end"
        android:lines="1"
        android:text="John Legend"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:padding="10dp"
        android:src="@drawable/ic_close" />

    <ImageView
        android:id="@+id/btn_image_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/img_close"
        android:background="?android:selectableItemBackground"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_next_gray" />

    <ImageView
        android:id="@+id/btn_image_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/btn_image_next"
        android:background="?android:selectableItemBackground"
        android:padding="8dp"
        android:src="@drawable/ic_pause_gray" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:background="#F8F7FC"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_avatar_notification"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@+id/img_avatar_notification"
        android:divider="?android:listDivider"
        android:dividerPadding="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:showDividers="middle">

        <ImageView
            android:id="@+id/btn_image_prev"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="?android:selectableItemBackground"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back_gray" />

        <ImageView
            android:id="@+id/btn_image_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="?android:selectableItemBackground"
            android:padding="18dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_pause_gray" />

        <ImageView
            android:id="@+id/btn_image_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="?android:selectableItemBackground"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_next_gray" />
    </LinearLayout>

    <ImageView
        android:layout_marginEnd="5dp"
        android:layout_width="wrap_content"
        android:layout_height="1.0px"
        android:layout_above="@+id/buttons"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/img_avatar_notification"
        android:background="?android:dividerHorizontal" />

    <ImageView
        android:layout_marginEnd="5dp"
        android:id="@+id/img_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:src="@drawable/ic_close" />

    <LinearLayout
        android:id="@+id/layout_no"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@+id/img_close"
        android:layout_toRightOf="@id/img_avatar_notification"
        android:orientation="vertical"
        android:paddingTop="8.0dip">

        <TextView
            android:id="@+id/txt_name_no"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fadingEdge="horizontal"
            android:focusable="true"
            android:maxLines="1"
            android:text="All off me"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_artist_no"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:maxLines="1"
            android:text="John Lengh"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>
</RelativeLayout>